<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayInfo"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="28dp">

    <!-- Country Row -->
    <LinearLayout
        android:id="@+id/country_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Label for Country -->

        <!-- TextView for Country Value -->
        <TextView
            android:id="@+id/display_country_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="264dp" />

        <TextView
            android:id="@+id/display_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="264dp" />
    </LinearLayout>

    <!-- City Row -->
    <LinearLayout
        android:id="@+id/city_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_row">

        <!-- Label for City -->
        <TextView
            android:id="@+id/display_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="288dp" />

        <!-- TextView for City Value -->
        <TextView
            android:id="@+id/display_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="288dp" />
    </LinearLayout>

    <!-- Population Row -->
    <LinearLayout
        android:id="@+id/population_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_row">

        <!-- Label for Population -->
        <TextView
            android:id="@+id/display_population_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Pop:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="315dp" />

        <!-- TextView for Population Value -->
        <TextView
            android:id="@+id/display_population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="315dp" />
    </LinearLayout>

    <!-- Metropolitan Row -->
    <LinearLayout
        android:id="@+id/metropolitan_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/population_row">

        <!-- Label for Metropolitan -->
        <TextView
            android:id="@+id/display_metropolitan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metro. pop:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="339dp" />

        <!-- TextView for Metropolitan Value -->
        <TextView
            android:id="@+id/display_metropolitan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="339dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
